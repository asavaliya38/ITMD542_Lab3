extends layout

block content
  .container-fluid.h-100.mt-5
    .row.align-items-center.justify-content-center.h-100
      .col-sm-8
        .d-flex.justify-content-between.align-items-center.mb-3
          h2.mb-0 Contact Details
          a.btn.btn-primary(href="/contacts")
            i.fa.fa-arrow-left.mr-2
            | Back to Contact List
          a.btn.btn-secondary(href=`/contacts/${contact.Id}/edit`) 
            i.fa.fa-edit
          form(action=`/contacts/${contact.Id}?_method=DELETE`, method="POST")
            button.btn.btn-danger(type="submit") 
              i.fa.fa-trash.mr-2
        table.table.table-bordered
          tbody
            each key, value in contact
              if key !== 'id'
                tr
                  td= value
                  td.bold= key
